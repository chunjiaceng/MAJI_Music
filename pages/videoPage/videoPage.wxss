/* pages/videoPage/videoPage.wxss */
/*头部搜索框*/
.header{
  display: flex;
}
.header image{
  width: 100rpx;
  height: 100rpx;
}
.header .searchVideo{
  border: 1px solid #cfcfd4;
  height: 100rpx;
  border-radius: 20rpx;
  flex: 1;
  line-height: 100rpx;
  text-align: center;
  margin:0 20rpx;
  color: #cfcfd4;

}
/*导航栏*/

.navigationBar{
  margin-top: 20rpx;
  border-top: 1px solid #ebe9e9;
  padding: 5rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: 10rpx;
  overflow: hidden;
  white-space: nowrap;
}
.navigationBar text{
  margin-right: 24rpx;
  font-size: 18px;
}
.redline{
  border-bottom: 2px solid red;
  color: red;
  
}
.video image{
  width: 100%;
  height: 200px;
}


/*视频播放区**/

.videoScroll{
  background-color: #f9f9fa;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: calc(100vh - 100rpx);
  /*height: calc(100vh - 186rpx);*/
}
.videoScroll .videoItem{
   width: 96%;
   background-color: #fefefe;
   
   
   border-radius: 10px;
   margin-top: 20rpx;
   box-shadow: 0px 10rpx 15rpx 5rpx rgb(211, 208, 208);
}
.videoScroll .videoItem image{
  width: 100%;
  border-radius: 20px;
  
}
.videoScroll .videoItem .videoComment{

  height: 20px;
  width: 100%;
  line-height: 20px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
-webkit-line-clamp: 1;
-webkit-box-orient: vertical;
margin-bottom: 20rpx;
}
.videoScroll .videoItem .iconList{
  display: flex;
  justify-content:  space-between; 
  margin: 0 20rpx;
  align-items: center;
  padding-bottom: 20rpx;
}
.videoScroll .videoItem .iconList button{
  box-sizing: border-box;
  
  padding: 0;
  margin-left: 210px;
  
}

.videoScroll .videoItem .iconfont{
 
  font-size: 30px;
  color: red;
  font-weight: 500;
  margin-right: 20rpx;
  margin-left: 20rpx;
}
