/*头部*/
.header{
  width: 100%;
  height: 400rpx;
}
.header .recommendImage{
  width: 100%;
  height: 400rpx;
}
.header .logoDate{
  width: 160rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
 
  transform: translate(190%,-270%);
  font-family: "站酷酷黑 Regular";
  font-size: 50px;
  color: white;
}

/*主体部分*/
.SongList .PlayMore{
  background-color: white;
  transform: translate(0,-10px);
  border-radius: 15px;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 5rpx 5rpx #e8eaeb;
  height: 80rpx;
  line-height: 80rpx;
  font-weight: 500;
  padding:0 30rpx;
  margin-bottom:10rpx ;
}
.SongList .PlayMore .playAll{
 
 
 height: 70rpx;
 box-shadow: 0 5rpx 5rpx #80d7f6;
 width: 160rpx;
 text-align: center;
 border-radius: 40rpx;
}
.SongList .PlayMore .more{
  height: 80rpx;
  width: 80rpx;
  text-align: center;
  font-size: 40rpx;
}
.SongList .SongScroll{
  height: calc(100vh - 480rpx);
}
.SongList .ScrollItem{
  height: 90rpx;
  margin-bottom: 30rpx;
  border-radius: 5rpx;
  display: flex;
  padding: 0 10rpx;
  align-items: center;
  box-shadow: 0 7rpx 5rpx #f7f7f7;
}
.SongList .ScrollItem image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.SongList .ScrollItem .songInfo{
 flex:1;
 display: flex;
 flex-direction: column;
 
}
.SongList .ScrollItem .songInfo text{
  max-width: 500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  height: 45rpx;
  line-height: 45rpx;
}
.SongList .ScrollItem .songInfo .author{
  color: gray;
}
.SongList .ScrollItem .more{
  width: 90rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
}